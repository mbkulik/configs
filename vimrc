"no original vi emulation
set nocompatible

"backspace can delete previous chars
set bs=2

"line numbers
set number

"line numbering takes 5 spaces
set numberwidth=4

set autoindent

set tabstop=4
set softtabstop=4
set shiftwidth=4

"quickly matches up brackets/brace etc
set showmatch

"visual aid instead of audio
set vb t_vb=

set ruler

"Set color
"set t_Co=256
syntax enable
set background=light
colorscheme solarized


"Search
set hlsearch
set incsearch
